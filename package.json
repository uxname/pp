{
  "name": "kodu",
  "version": "1.1.4",
  "private": false,
  "license": "UNLICENSED",
  "bin": {
    "kodu": "dist/main.js"
  },
  "scripts": {
    "________________ BUILD AND RUN ________________": "",
    "build": "nest build && chmod +x dist/main.js",
    "start:prod": "node dist/main.js",
    "new:command": "nest g -c nest-commander-schematics command",
    "new:question": "nest g -c nest-commander-schematics question",
    "________________ FORMAT AND LINT ________________": "",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:fix:unsafe": "biome check --write --unsafe",
    "ts:check": "tsc --noEmit",
    "knip": "knip --production",
    "check": "run-p ts:check lint:fix knip"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@mastra/core": "^1.0.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "clipboardy": "^5.0.2",
    "execa": "^9.6.1",
    "js-tiktoken": "^1.0.21",
    "lilconfig": "^3.1.3",
    "mastra": "^1.0.1",
    "nest-commander": "^3.20.1",
    "picocolors": "^1.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "tinyglobby": "^0.2.15",
    "ts-morph": "^24.0.0",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/node": "^22.10.7",
    "knip": "^5.82.1",
    "nest-commander-schematics": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
