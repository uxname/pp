{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "llm": {
      "type": "object",
      "properties": {
        "model": {
          "default": "openai/gpt-5-mini",
          "type": "string",
          "pattern": "^[a-zA-Z0-9-_]+\\/[a-zA-Z0-9-_.]+$"
        },
        "apiKeyEnv": {
          "default": "OPENAI_API_KEY",
          "type": "string"
        },
        "commands": {
          "default": {
            "commit": {
              "modelSettings": {
                "maxOutputTokens": 150
              }
            },
            "review": {
              "modelSettings": {
                "maxOutputTokens": 5000
              }
            }
          },
          "type": "object",
          "properties": {
            "commit": {
              "type": "object",
              "properties": {
                "modelSettings": {
                  "type": "object",
                  "properties": {
                    "maxOutputTokens": {
                      "type": "integer",
                      "exclusiveMinimum": 0,
                      "maximum": 9007199254740991
                    }
                  },
                  "additionalProperties": {}
                }
              },
              "additionalProperties": false
            },
            "review": {
              "type": "object",
              "properties": {
                "modelSettings": {
                  "type": "object",
                  "properties": {
                    "maxOutputTokens": {
                      "type": "integer",
                      "exclusiveMinimum": 0,
                      "maximum": 9007199254740991
                    }
                  },
                  "additionalProperties": {}
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["model", "apiKeyEnv"],
      "additionalProperties": false
    },
    "cleaner": {
      "default": {
        "whitelist": ["//!"],
        "keepJSDoc": true,
        "useGitignore": true
      },
      "type": "object",
      "properties": {
        "whitelist": {
          "default": ["//!"],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keepJSDoc": {
          "default": true,
          "type": "boolean"
        },
        "useGitignore": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": ["whitelist", "keepJSDoc", "useGitignore"],
      "additionalProperties": false
    },
    "packer": {
      "default": {
        "ignore": [
          "package-lock.json",
          "yarn.lock",
          "pnpm-lock.yaml",
          ".git",
          ".kodu",
          "node_modules",
          "dist",
          "coverage"
        ],
        "useGitignore": true
      },
      "type": "object",
      "properties": {
        "ignore": {
          "default": [
            "package-lock.json",
            "yarn.lock",
            "pnpm-lock.yaml",
            ".git",
            ".kodu",
            "node_modules",
            "dist",
            "coverage"
          ],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "useGitignore": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": ["ignore", "useGitignore"],
      "additionalProperties": false
    },
    "prompts": {
      "type": "object",
      "properties": {
        "review": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "commit": {
          "type": "string"
        },
        "pack": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["cleaner", "packer"],
  "additionalProperties": false
}
